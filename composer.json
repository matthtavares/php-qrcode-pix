{
    "name": "matthtavares/php-qrcode-pix",
    "description": "Esse projeto facilita a implementação de um QR Code para quem deseja receber pagamentos via PIX.",
    "type": "library",
    "homepage": "https://github.com/matthtavares/php-qrcode-pix",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Mateus Tavares",
            "email": "contato@mateustavares.com.br",
            "role": "Developer"
        },
        {
            "name": "Renato Monteiro Batista",
            "role": "Developer"
        }
    ],
    "keywords": [
        "php",
        "qrcode",
        "pagamentos",
        "pix",
        "brcode"
    ],
    "require": {
        "php": ">=7.0",
        "chillerlan/php-qrcode": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "MatthTavares\\Pix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatthTavares\\Pix\\": "test/"
        }
    }
}
